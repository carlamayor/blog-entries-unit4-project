{{#partial "title"}}Edit{{/partial}}
{{#partial "content"}}
        <section>
            <div class="container">
                <div class="edit-entry">
                    <h2>Edit Entry</h2>
                    <form method="post" action="/entries/{{blogEntry.slug}}/edit">
                        <label for="title"> </label>
                        <input type="text" name="title" id="title" ><br>
                        <label for="content"></label>
                        <textarea rows="5" name="content" id="content"></textarea>
                        <label for="tags"> </label>
                        <input type="text" name="tags" id="tags" ><br>
                        <input type="submit" value="Save Entry" class="button">
                        <a href="/entries/{{blogEntry.slug}}" class="button button-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </section>
{{/partial}}
{{> base.hbs}}