{{#partial "content"}}

        <section>
            <div class="container">
                <div class="entry-list">
                    <ul>
                        {{#each blogEntries}}
                            <li class="article-entries">
                                <article>
                                    <h2><a href="/entries/{{ slug }}" id="entry-title">{{ title }}</a></h2>
                                    <time datetime={{ date }} id="entry-time">{{ formattedDate }}</time>
                                </article>
                            </li>
                        {{else}}
                            <p>No blog entries were found.</p>
                        {{/each}}
                    </ul>
                </div>

            </div>
        </section>
{{/partial}}

{{> base.hbs}}